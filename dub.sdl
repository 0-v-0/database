name "database"
description "Lightweight native MySQL/MariaDB & PostgreSQL driver"
authors "Marcio Martins" "Shove"
copyright "Copyright Â© 2017-2020, Marcio Martins, Shove"
license "MIT"
dependency ":mysql" version="*"
dependency ":postgresql" version="*"
targetType "library"
sourcePaths "source"
importPaths "source"
subPackage {
	name "mysql"
	description "Lightweight native MySQL/MariaDB driver"
	dependency "database:util" version="*"
	targetType "library"
	sourcePaths "database/mysql"
	importPaths "."
}
subPackage {
	name "postgresql"
	description "Lightweight native PostgreSQL driver"
	dependency "database:util" version="*"
	targetType "library"
	sourcePaths "database/postgresql"
	importPaths "."
}
subPackage {
	name "util"
	targetType "library"
	sourceFiles "database/util.d"
	importPaths "."
}